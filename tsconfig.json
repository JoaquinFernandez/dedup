{
  "compilerOptions": {
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node", "jest"],
    "baseUrl": "./",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", ".vscode/**/*", "tests/**/*"]
}
